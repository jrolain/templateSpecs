{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Test Form View",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope"
                        },
                        {
							"name": "virtualNetworksApi",
							"type": "Microsoft.Solutions.ArmApiControl",
							"request": {
								"method": "GET",
								"path": "[concat(steps('basics').resourceScope.subscription.id, '/providers/Microsoft.Network/virtualNetworks?api-version=2022-11-01')]"
							}
						},	
                        {
							"name": "subnetsApi",
							"type": "Microsoft.Solutions.ArmApiControl",
							"request": {
								"method": "GET",
								"path": "[concat(steps('basics').virtualNetwork, '/subnets?api-version=2022-05-01')]"
							}
						},
                        {
                            "name": "virtualNetwork",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Virtual Network",
                            "multiLine": true,
                            "toolTip": "Select the virtual network to which the function app will be integrated. All subnet selections below will be limited to this Virtual Network.",
                            "constraints": {
                                "required": true,
                                "allowedValues": "[map(filter(steps('basics').virtualNetworksApi.value, (item) => equals(item.location, steps('basics').resourceScope.location.name)), (item) => parse(concat('{\"label\":\"', item.name, '\",\"description\":\"Resource group: ', first(skip(split(item.id, '/'), 4)), '\",\"value\":\"', item.id, '\"}')))]"
                            },
                            "visible": true
                        },
                        {
                            "name": "subnet",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Subnet",
                            "multiLine": true,
                            "toolTip": "Select the subnet to which the function app will be integrated.",
                            "constraints": {
                                "required": true,
                                "allowedValues": "[map(steps('basics').subnetsApi.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"description\":\"Resource group: ', first(skip(split(item.id, '/'), 4)), '\",\"value\":\"', item.id, '\"}')))]"
                            },
                            "visible": true
                        }                   
                        
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "location": "[steps('basics').resourceScope.location.name]",
                "localVnets": "[map(filter(steps('basics').virtualNetworksApi.value, (item) => equals(item.location, steps('basics').resourceScope.location.name)), (item) => parse(concat('{\"label\":\"', item.name, '\",\"description\":\"Resource group: ', first(skip(split(item.id, '/'), 4)), '\",\"value\":\"', item.id, '\"}')))]",
                "subnets": "[map(steps('basics').subnetsApi.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"description\":\"Resource group: ', first(skip(split(item.id, '/'), 4)), '\",\"value\":\"', item.id, '\"}')))]",
                "test": "[map(steps('basics').subnetsApi.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"description\":\"', item.properties.serviceAssociationLinks, '\",\"value\":\"', item.id, '\"}')))]",
                "filteredSubnets": "[map(steps('basics').subnetsApi.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"description\":\"', first(map(item.properties.serviceAssociationLinks, (item) => item.properties.link)), '\",\"value\":\"', item.id, '\"}')))]"
            },
            "kind": "Subscription",
            "location": "[steps('basics').resourceScope.location.name]",
            "subscriptionId": "[steps('basics').resourceScope.subscription.id]"
        }
    }
}